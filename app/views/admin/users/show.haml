.box-white
  .alert.alert-danger.text-center
    UZANT-PAÄœO POR EVENTASERVO-ADMINISTRATOJ
  .lead= @user.name

  = form_for(@user, url: admin_user_path(@user), method: :patch, class: 'form-horizontal') do |f|
    .form-group.row
      = f.label :city, class: 'col-3 col-form-label text-right'
      .col-9
        = f.text_field :city, class: 'form-control'

    .form-group.row
      = f.label :country_id, class: 'col-3 col-form-label text-right'
      .col-9
        = f.select(:country_id, options_from_collection_for_select(Country.not_online, 'id', 'name', @user.country_id), {}, class: 'form-control select2-input')

    .buttons-footer
      = f.submit 'Registri', class: 'btn btn-sm btn-primary'
