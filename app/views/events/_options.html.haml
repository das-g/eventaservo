.dropdown
  %a#eventMenu.fas.fa-ellipsis-v.link-black{'aria-expanded' => 'false', 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :href => '#'}
  .dropdown-menu.dropdown-menu-right{'aria-labelledby' => 'eventMenu'}
    = link_to 'Aldoni al via kalendaro', event_url(@event.code, format: :ics), class: 'dropdown-item'
    - if user_signed_in? && user_can_edit_event?(user: current_user, event: @event)
      - if @event.cancelled
        = link_to icon('fas', 'ban', 'Malnuligi'), event_malnuligi_url(@event.code), class: 'btn btn-sm btn-outline-danger no-border'

      - else
        = link_to 'Nuligi', '#', class: 'dropdown-item', data: { target: '#nuligiloModal', toggle: 'modal' }
