<div class="box-white" id="evento">
  <div class="lead">
    <%= icon('fas', 'video', 'Registritaj prezentoj') %>
  </div>
  <div class="row">
    <%- @videoj.each do |video| %>
      <div class="col-12 col-md-6 col-lg-4">
        <video-karto v-bind:video="<%= video.to_json %>"
                     image-url="<%= video.bildo.attached? ?  url_for(video.bildo) : asset_url('video_thumbnail.png') %>"
                     v-bind:evento="<%= video.evento.to_json %>"
                     v-bind:organizoj="<%= video.evento.organizations.pluck(:name, :short_name).to_json %>"
        />
      </div>
    <% end %>
  </div>
</div>
